<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_international"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/circle_image"
        android:layout_marginRight="1dp"
        android:src="@drawable/baseline_remove_circle_24"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="3dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_itn_timeZone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hôm nay, + 0G"
                    android:textColor="@color/gray_text" />

                <TextView
                    android:id="@+id/tv_itn_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Hà Nội"
                    android:textColor="@color/white"
                    android:textSize="26dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <ImageView
                android:id="@+id/img_itn_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_menu_24"
                android:layout_marginHorizontal="10dp"
                android:visibility="gone"
            />
            <TextView
                android:id="@+id/tv_itn_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text=""
                android:textColor="@color/white"
                android:textSize="45dp"
                android:layout_marginRight="10dp"/>


        </LinearLayout>

        <View
            android:id="@+id/view_internationaltime"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_itn_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:text="@string/delete"
        android:textColor="@color/white"
        android:textSize="15dp" />


</LinearLayout>